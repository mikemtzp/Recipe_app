<%= form_with model: food, url: user_foods_path, method: :post, class: "login-container" do |form| %>
  <% if food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="new-field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "input", placeholder: "Noodle" %>
  </div>

  <div class="new-field">
    <%= form.label :measurement_unit, style: "display: block" %>
    <%= form.text_field :measurement_unit, class: "input", placeholder: "g" %>
  </div>

  <div class="new-field">
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, class: "input", placeholder: "2.50" %>
  </div>

  <div class="new-field">
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity, class: "input", placeholder: "1" %>
  </div>

  <div>
    <%= form.submit class: "login-button margin-top" %>
  </div>
<% end %>
